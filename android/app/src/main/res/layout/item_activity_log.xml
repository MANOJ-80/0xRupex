<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLogType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPTURED"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_category_tag" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvLogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34:56"
            android:textSize="10sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Notification from Google Pay"
        android:textSize="14sp"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/tvLogDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Source: notification • ₹3.00 • M VENGADESH"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:visibility="gone" />
</LinearLayout>

