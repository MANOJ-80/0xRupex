<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Dark Theme -->
    <style name="Theme.Rupex" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Rupex.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Rupex.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Rupex.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Rupex.Amount.Income" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/income</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Rupex.Amount.Expense" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/expense</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Rupex.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.Rupex.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Rupex.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.Rupex.Dialog" parent="Theme.Material3.Dark.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>
